<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TravelRecordApp.PostDetailPage">
    <ContentPage.Content>
        <StackLayout
            Margin="20, 10, 20, 0">
            <Entry x:Name="experienceEntry"/>
            <Label Text=""
                   x:Name="venueLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   Margin="5, 20, 0, 0"/>
            <Label Text=""
                   x:Name="categoryLabel"/>
            <Label Text=""
                   x:Name="addressLabel"
                   FontSize="15"/>
            <Label Text=""
                   x:Name="distanceLabel"
                   FontSize="15"/>
            <StackLayout
                VerticalOptions="EndAndExpand"
                Margin="20, 10, 20, 0">
                <Button Text="Update"
                    x:Name="updateButton"
                    Clicked="updateButton_Clicked"
                    Style="{StaticResource Key=normalButton}"
                    VerticalOptions="End"/>
                <Button Text="Delete"
                    x:Name="deleteButton"
                    Clicked="deleteButton_Clicked"
                    Style="{StaticResource Key=redButton}"
                    />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
